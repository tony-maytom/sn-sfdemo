		return;
	}
	g_form.hideFieldMsg('filter');
	// Validate filter does not contain lastModified
	var hasModified = newValue.toLowerCase().includes('lastmodified');
	if (hasModified) {
		var errString = "Your filter '" + newValue + "' contains LastModified property which is automatically appended";
		g_form.clearValue('filter');
		g_form.showErrorBox('filter',errString);
	}
}]]></script>
